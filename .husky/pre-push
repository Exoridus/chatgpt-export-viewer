#!/usr/bin/env sh
refs_file="$(mktemp)"
cat > "$refs_file"

npm run validate:tags -- --stdin < "$refs_file" || {
  rm -f "$refs_file"
  exit 1
}

run_checks=false

# stdin rows: <local_ref> <local_sha> <remote_ref> <remote_sha>
while read -r local_ref local_sha remote_ref remote_sha; do
  case "$remote_ref" in
    refs/tags/v*)
      run_checks=true
      ;;
  esac
done < "$refs_file"

if [ "$run_checks" = "true" ]; then
  echo "Pre-push: running lint + tests for version tag push..."
  npm run lint || exit 1
  npm run test:run || exit 1
fi

rm -f "$refs_file"
